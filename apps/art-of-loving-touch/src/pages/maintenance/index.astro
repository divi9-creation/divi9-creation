---
import { Container, Hero, PageTitle } from '$client/components';
import { BaseLayout } from '$client/layouts';

const message = `We're down for maintenance. Be back soon!`;

Astro.response.status = 503;
---

<BaseLayout title='Maintenance'>
  <Hero>
    <Container size='md'>
      <PageTitle>{message}</PageTitle>
    </Container>
  </Hero>
</BaseLayout>
